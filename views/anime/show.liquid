{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ anime.name }} 
          </h2>
          <img src="{{ anime.image }}" >
           <br>
           <h3>{{ anime.info }}</h3>
          <a href="/anime/{{ anime._id }}/edit"><button class=“btn btn-primary btn-sm mt-2”>Edit</button></a>
          <form action="/anime/{{ anime._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
          </form>
          <a href="/anime"><button>Back to List</button></a>
        </article>
        <form action="/anime/{{ anime._id }}/new" method="post">
        <textarea name="comment" cols="30" rows="10"></textarea>
      <input type="submit" value="Post">
    </form>
  </div>
  {%for comment in anime.comments %}
  <div>
    {{ comment.comment }}
  </div>
  {%endfor%}
{% endblock %}
